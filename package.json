{
  "name": "FiberJS",
  "description": "Fiber brings simplicity and scalability to your JS Apps.",
  "keywords": [
    "backbone",
    "marionette",
    "reactive",
    "virtual dom",
    "model",
    "view",
    "router",
    "contracts",
    "ioc",
    "inversion of control",
    "di container",
    "client",
    "browser"
  ],
  "author": "Igor Krimerman",
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^1.10.3",
    "gulp": "^3.9.0",
    "gulp-connect": "^2.3.1",
    "gulp-eslint": "^1.1.1",
    "gulp-inject": "^3.0.0",
    "gulp-mocha": "^2.2.0",
    "karma": "^0.13.19",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.1",
    "karma-opera-launcher": "^0.3.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-safari-launcher": "^0.1.1",
    "karma-sinon": "^1.0.4",
    "mocha": "^2.4.5",
    "mr-doc": "^3.1.2",
    "mr-doc-theme-cayman": "^1.0.3",
    "phantomjs-prebuilt": "^2.1.5",
    "shelljs": "^0.6.0",
    "sinon": "^1.17.3",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "backbone": "^1.2.3",
    "lodash": "^4.5.0",
    "ractive": "^0.7.3",
    "superagent": "^1.8.3"
  },
  "scripts": {
    "postinstall": "npm run min && npm run doc",
    "min": "uglifyjs ./build/fiber.js --mangle --source-map ./build/fiber.min.map -o ./build/fiber.min.js",
    "lint": "eslint fiber.js",
    "test": "./node_modules/mocha/bin/mocha",
    "doc": "rm -rf ./docs/doc && mr-doc -s ./src -o ./docs/doc -n 'Fiber' -t 'cayman'",
    "open-doc": "open -a \"Google Chrome\" docs/doc/index.html"
  },
  "main": "build/fiber.js",
  "version": "0.1.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imkrimerman/fiber.git"
  }
}
